generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  plan      String   @default("free")
  bios      Bio[]
  createdAt DateTime @default(now())
}

model Bio {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String
  style     String //creative, informational, educational, professional
  links     Json
  publicUrl String   @unique
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}
